<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleActivity">

    <Button
        android:id="@+id/button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button1"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button0"
        android:layout_toRightOf="@+id/button0"
        android:text="."
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button3"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buttonPoint"
        android:layout_toRightOf="@+id/buttonPoint"
        android:text="="
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonAdd"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buttonEquals"
        android:layout_toRightOf="@+id/buttonEquals"
        android:text="-"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/registryView"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:paddingLeft="10sp"
        android:paddingTop="15sp"
        android:paddingRight="10sp"
        android:text="registry"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/currentInputView"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_below="@+id/registryView"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:paddingLeft="10sp"
        android:paddingTop="5sp"
        android:paddingRight="20sp"
        android:text="15"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="60sp" />

    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_below="@+id/currentInputView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Bcksp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_below="@+id/currentInputView"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buttonBackspace"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:text="C/CE" />

    <Button
        android:id="@+id/buttonChangeSign"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_below="@+id/currentInputView"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buttonClear"
        android:layout_toRightOf="@+id/buttonClear"
        android:text="+/-" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonBackspace"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="40sp"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonBackspace"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:textSize="40sp"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonBackspace"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:textSize="40sp"
        android:text="9" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonChangeSign"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:text="/"
        android:textSize="35sp" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonDivide"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:text="*"
        android:textSize="35sp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonMultiply"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:text="+"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button6"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:text="3"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button9"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:text="6"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button8"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:textSize="40sp"
        android:text="5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button5"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:textSize="40sp"
        android:text="2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button7"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="40sp"
        android:text="4" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/button4"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="40sp"
        android:text="1" />
</RelativeLayout>
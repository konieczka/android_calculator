<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="50sp"
        android:lineSpacingExtra="?android:attr/windowTitleSize"
        android:text="CALCULATOR"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSimple"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="88dp"
        android:text="Simple"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonAdvanced"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSimple"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="44dp"
        android:text="Advanced"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAdvanced"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="About"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Exit"
        android:textSize="30sp" />
</RelativeLayout>